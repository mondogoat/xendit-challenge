{
    "$schema": "http://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "default": {},
    "title": "Update QR Schema",
    "required": [
        "description",
        "callback_url",
        "amount"
    ],
    "properties": {
        "description": {
            "type": "string",
            "default": "",
            "title": "The description Schema",
            "examples": [
                "send money to wallet"
            ]
        },
        "callback_url": {
            "type": "string",
            "default": "",
            "title": "The callback_url Schema",
            "examples": [
                "https://walletnotif.com"
            ]
        },
        "amount": {
            "type": "integer",
            "default": 0,
            "title": "The amount Schema",
            "examples": [
                1500
            ]
        }
    },
    "examples": [{
        "description": "send money to wallet",
        "callback_url": "https://walletnotif.com",
        "amount": 1500
    }]
}